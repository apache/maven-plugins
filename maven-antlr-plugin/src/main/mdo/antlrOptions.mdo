<model>
  <id>antlroptions</id>
  <name>antlrOptions</name>
  <description><![CDATA[Model for Antlr options.]]></description>
  <defaults>
    <default>
      <key>package</key>
      <value>org.apache.maven.plugin.antlr.options</value>
    </default>
  </defaults>
  <classes>
    <class>
      <name>Grammar</name>
      <description>A Grammar parameter.</description>
      <version>1.0.0</version>
      <fields>
        <field>
          <name>name</name>
          <description>The grammar file name.</description>
          <version>1.0.0</version>
          <type>String</type>
          <identifier>true</identifier>
        </field>
        <field>
          <name>glib</name>
          <description>Colon separated or semicolon separated supergrammar file names.</description>
          <version>1.0.0</version>
          <type>String</type>
          <identifier>true</identifier>
        </field>
      </fields>
    </class>
  </classes>
</model>

