      <groupId>eartest</groupId>
      <artifactId>ejb-sample-one</artifactId>
      <version>1.0</version>
      <type>ejb</type>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
