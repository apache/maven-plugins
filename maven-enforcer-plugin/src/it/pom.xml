								<evaluateBeanshell>
									<condition>rti.getApplicationVersion().getMajorVersion() == 2;</condition>
								</evaluateBeanshell>
								<noSnapshots/>
								<bannedDependencies>
								<excludes>
								<exclude>org.apache.maven</exclude>
								</excludes>
								</bannedDependencies>-->
								<requirePluginVersions/>
							</rules>
