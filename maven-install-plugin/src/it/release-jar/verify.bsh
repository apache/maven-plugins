import java.io.*;
import java.util.*;

String[] paths =
{
    "org/apache/maven/its/plugins/install/release-jar/maven-metadata-local.xml",
    "org/apache/maven/its/plugins/install/release-jar/1.0/release-jar-1.0.pom",
    "org/apache/maven/its/plugins/install/release-jar/1.0/release-jar-1.0.jar",
};

for ( String path : paths )
{
    File file = new File( localRepositoryPath, path );
    System.out.println( "Checking for existence of " + file );
    if ( !file.isFile() )
    {
        throw new FileNotFoundException( "Missing: " + file.getAbsolutePath() );
    }
}

return true;
