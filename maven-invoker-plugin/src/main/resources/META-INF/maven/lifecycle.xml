<lifecycles>
  <lifecycle>
    <id>invoker-report</id>
    <phases>
      <phase>
        <id>test</id>
        <executions>
          <execution>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <ignoreFailures>true</ignoreFailures>
              <disableReports>false</disableReports>
            </configuration>
          </execution>
        </executions>
      </phase>
    </phases>
  </lifecycle>
</lifecycles>

