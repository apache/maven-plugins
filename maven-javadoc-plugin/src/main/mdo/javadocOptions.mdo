        </field>
        <field>
          <name>taglets</name>
          <version>1.1.0+</version>
          <description>A list of Taglet parameters.</description>
          <required>false</required>
          <association>
            <type>Taglet</type>
            <multiplicity>*</multiplicity>
          </association>
        </field>
        <field>
          <name>offlineLinks</name>
          <version>1.1.0+</version>
          <description>A list of OfflineLink parameters.</description>
          <required>false</required>
          <association>
