          </association>
        </field>
        <field>
          <name>tagletArtifacts</name>
          <version>1.1.0+</version>
          <description>A list of TagletArtifact parameters.</description>
          <required>false</required>
          <association>
            <type>TagletArtifact</type>
            <multiplicity>*</multiplicity>
