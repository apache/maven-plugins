<plugin>
  <id>resource-copier</id>
  <implementation>org.apache.maven.plugin.ResourcesPlugin</implementation>
  <mode>field</mode>
  <goals>
    <goal>
      <name>resources</name>
      <parameters>
        <parameter>
          <name>outputDirectory</name>
          <expression>#maven.build.dest</expression>
        </parameter>
        <parameter>
          <name>resources</name>
          <expression>#project.build.resources</expression>
        </parameter>
      </parameters>
    </goal>
    <goal>
      <name>test:resources</name>
      <parameters>
        <parameter>
          <name>outputDirectory</name>
          <expression>#maven.test.dest</expression>
        </parameter>
        <parameter>
          <name>resources</name>
          <expression>#project.build.unitTeset.resources</expression>
        </parameter>
      </parameters>
    </goal>
  </goals>
</plugin>
