<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>maven-site-index-test</groupId>
  <artifactId>MSITE-705</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>Maven site wagon upload log test</name>
  <description>
    Wagon log (session/transfer) displayed only if debug mode activated
  </description>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>

  <build>
    
    <extensions>
      <extension>
        <groupId>org.apache.maven.wagon</groupId>
        <artifactId>wagon-ftp</artifactId>
        <version>2.10</version>
      </extension>
    </extensions>
    
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <version>@project.version@</version>
      </plugin>

      <!-- Hard to deal with code execution in 'setup.groovy' (even with 'invoker.addTestClassPath' parameter => workaround -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <phase>pre-site</phase>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <target>
            <java fork="true" spawn="true" classpathref="maven.compile.classpath" className="org.apache.maven.plugins.site.test.ftp.SimpleFtpServer" />
          </target>
        </configuration>
      </plugin>

    </plugins>
  </build>

  <distributionManagement>
    <site>
      <id>MSITE-705</id>
      <name>Test publish</name>
      <url>ftp://guest:guest@localhost:2121/MSITE-705</url>
    </site>
  </distributionManagement>

  <dependencies>
    <!-- FTP(S) embedded server -->
    <dependency>
      <groupId>org.apache.ftpserver</groupId>
      <artifactId>ftpserver-core</artifactId>
      <version>1.0.6</version>
    </dependency>
    <!-- Log (same version of SLF4J API use by FTP server) -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <version>1.5.2</version>
    </dependency>

  </dependencies>

</project>
