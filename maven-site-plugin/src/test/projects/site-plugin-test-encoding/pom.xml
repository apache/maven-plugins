<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.apache.maven.plugins.site-plugin-test</groupId>
  <artifactId>site-plugin-test-encoding</artifactId>
  <version>1.0</version>
  <packaging>jar</packaging>
  <description>Site encoding support tests:
    inputEncoding=UTF-16 for apt files,
    outputEncoding=UTF-16 for generated HTML files,
    misc. encodings for site.xml and xdoc files
  </description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-site-plugin</artifactId>
        <configuration>
          <inputEncoding>UTF-16</inputEncoding>
          <outputEncoding>UTF-16</outputEncoding>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
